<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/back"
    tools:context=".Admin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:background="#F2F7F7"
        android:backgroundTint="#7CCBDA"
        android:text="MOVIE APP"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#374949"
        android:textSize="40sp"
        android:layout_marginLeft="90dp"
        android:textStyle="bold"></TextView>



    <EditText
        android:id="@+id/Name_id"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:background="#B2B8C7"

        android:hint="Name" />

    <EditText
        android:id="@+id/Year_id"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:background="#B2B8C7"
        android:hint="Releasing Year" />

    <EditText
        android:id="@+id/Genre_id"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:background="#B2B8C7"
        android:hint="Genre" />

    <EditText
        android:id="@+id/Rating_id"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:background="#B2B8C7"
        android:hint="Rating" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:text="Store Data"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="90dp"
        android:id="@+id/show_button"
        android:text="Load Data"/>


</LinearLayout>